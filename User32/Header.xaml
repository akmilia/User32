<UserControl x:Class="User32.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:User32"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid Background="LightGray">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="manager" Content="Менеджер" Click="manager_Click" Margin="5"/>
            <Button x:Name="transport" Content="Транспорт" Click="transport_Click" Margin="5"/>
            <Button x:Name="clients" Content="Клиенты" Click="clients_Click" Margin="5"/>
            <Button x:Name="discount" Content="Скидки" Click="discount_Click" Margin="5"/>
            <Button x:Name="exit" Content="Выход" Click="exit_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
